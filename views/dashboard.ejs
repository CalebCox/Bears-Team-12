<% include ./partials/header %>

<main class="dashboard-section">
  <h1 class="dashboard-title">My Dashboard</h1>
  <section class="user-details">
    <p class="user-name">Username: <%= currentUser.local.username %></p>
    <p class="user-email">Email: <%= currentUser.local.email %></p>

    <div class="edit-section">
      <p class="form-title">Edit your information</p>

      <% if (currentUser.local.hash) { %>
        <p class="user-question">Change your password</p>
        <form action="" method="POST" class="form-group">
          <input type="password" class="form-input" name="oldPassword" placeholder="Current Password">
          <input type="password" class="form-input" name="newPassword" placeholder="New Password">
          <button id="SubmitPassword" class="submit">Change password</button>
        </form>
      <% } else { %>
        <p class="user-question">Create a password</p>
        <form action="" method="POST" class="form-group">
          <input type="password" class="form-input" name="newPassword" placeholder="New Password">
          <button id="SubmitPassword" class="submit">Create password</button>
        </form>
      <% } %>

      <p class="user-question full-question">You can connect your account to any of the following:</p>
      <ul class="social-list">
        <li class="social-item">
          <a class="social-link" id="socialLink" href=""><i class="fab fa-google"></i></a>
        </li>
        <li class="social-item">
          <a class="social-link" id="socialLink" href=""><i class="fab fa-twitter"></i></a>
        </li>
        <li class="social-item">
          <a class="social-link" id="socialLink" href=""><i class="fab fa-facebook-f"></i></a>
        </li>
      </ul>

    </div>
  </section>
</main>

<% include ./partials/footer %>
