<% include ../partials/header %>

<main>
        <h1 class="page-title">Have you seen...</h1>
        <section class="post-pet">
          <img class="post-image" src="https://i.kinja-img.com/gawker-media/image/upload/s--ytATzsY9--/c_fill,fl_progressive,g_center,h_450,q_80,w_800/ol9ceoqxidudap8owlwn.jpg" alt="test">
          <% if (post.found.name !== '') { %>
            <h2 class="name"><%= post.found.name %></h2>
          <% } else { %>
            <h2 class="name"><%= post.found.title %></h2>
          <% } %>
          <hr class="line">
          <div class="post-text">
            <div class="post-details">
              <p class="details-title">About</p>
              <p class="subtitle">Type: <span class="span"><%= post.petType.petCategory %></span></p>
              <p class="subtitle">Breed: <span class="span"><%= post.breed %></span></p>
              <p class="subtitle">Gender: <span class="span"><%= post.gender %></span></p>
              <p class="subtitle">Color: <span class="span">Light Brown</span></p>           
              <p class="subtitle">Contact: <span class="span"><%= post.author.username %></span></p>
              <p class="subtitle">Email: <span class="span">janebeck@gmail.com</span></p> 
            </div>
  
            <div class="post-description">
              <p class="desc-title">Details:</p>
              <p class="subtitle">Date Found: <span class="span"><%= post.date %></span></p>
              <p class="subtitle">Location: <span class="span"><%= post.location.street %> <%= post.location.city %>, <%= post.location.state %>, <%= post.location.postal %></span>
              <p class="subtitle">Description: <span class="span description-text"><%= post.description %></p>
            </div>
          </div>
        </section>
  
        <section class="comments">
          <% if (post.comments.length === 0) { %>
            <h3>Be the first to comment!</h3>
          <% } else { %>
          <% post.comments.forEach((comment) => { %>
            <div class="comment">
                <h3 class="comment-title"><%= comment.author.username %> - <%= comment.createdAt %></h3>
                <p class="comments-text"><%= comment.text %></p>
              </div>
          <% }) %>
          <% } %>
        </section>
      </main>

<% include ../partials/footer %>